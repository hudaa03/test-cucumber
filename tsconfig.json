{
    "compilerOptions": {
      "lib": [
        "es2021"
      ],
      "typeRoots": [
        "./node_modules/@types",
        "src/helper/types"
      ],
      "resolveJsonModule": true,
      "baseUrl": ".",  // Set the base directory for module resolution
      "paths": {
        "src/*": ["src/*"]  // Optionally, you can map 'src' to resolve as an absolute path
      },
      "moduleResolution": "node"  // Ensure Node-style module resolution
    }
  }
  